<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainWearActivity"
    tools:deviceIds="wear_square"
    android:background="@drawable/ic_launcher"
    android:padding="7dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@drawable/balance_panel_background"
        android:layout_gravity="center|top"
        android:id="@+id/balance_container"
        android:layout_weight="2"
        style="@style/balance_panel"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/accountTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_placeholder"
            android:visibility="visible"
            android:gravity="center"/>

        <TextView
            android:id="@+id/balanceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/balance_placeholder"
            android:visibility="visible"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:text="@string/command_button_label"
        android:id="@+id/button"
        android:onClick="getBalance"
        android:background="@drawable/button_background"
        style="@style/button_primary"
        android:layout_weight="1"
        />

</LinearLayout>
